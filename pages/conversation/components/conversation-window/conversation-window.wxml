<view class="container">
    <view class="message-list">
        <view wx:for="{{messageList}}" wx:key="index">
            <i-message message="{{item}}"
                bind:send="handleSendLink"
                bind:select="handleSelect"
            ></i-message>
        </view>
    </view>

    <view class="action-bar">
        <view class="inner-container">
            <i-icon name="picture" size="60" color="#333333" bind:tap="handleSendImage"></i-icon>
            <textarea
                value="{{text}}"
                class="conversation-textarea"
                auto-height
                cursor-spacing="{{30}}"
                disable-default-padding
                fixed
                hold-keyboard
                placeholder="请输入内容"
                bind:tap="handleInput"
            ></textarea>
            <i-button shape="circle" size="mini" bind:tap="handleSend">发送</i-button>
        </view>
        <i-safe-area area="bottom"></i-safe-area>
    </view>
</view>