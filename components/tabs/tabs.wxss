.container {
    display: flex;
    flex-direction: column;
    min-height: 100%;
}

.tabs {
    display: flex;
    padding: 30rpx 0;
    background-color: #fff;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 99;
}

.tab-item {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-item-content {
    color: #888888;
    white-space: nowrap;
}

.tab-item-content.active-tab {
    color: #333333;
    font-weight: bold;
}

.divider {
    height: 6rpx;
    width: 50rpx;
    margin-top: 10rpx;
    background-color: #f3d066;
}

.tab-panel {
    flex-grow: 1;
    margin-top: 30rpx;
}