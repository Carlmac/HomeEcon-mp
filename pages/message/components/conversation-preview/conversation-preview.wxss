.container {
    box-sizing: border-box;
    display: flex;
    background: #ffffff;
    padding: 30rpx;
}

.left {

}

.right {
    box-sizing: border-box;
    width: 100%;
    margin-right: 30rpx;
    border-bottom: 1px solid #efefef;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.right-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
}

.right-bottom {
    color: #888888;
    font-size: 28rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}